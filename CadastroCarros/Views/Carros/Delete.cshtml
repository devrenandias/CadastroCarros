@model CadastroCarros.Models.Carro

@{
    ViewData["Title"] = "Excluir Carro";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir este veiculo de Marca: @Model.Marca, Modelo: @Model.Modelo e Cor: @Model.Cor?</h3>
<hr />

<div>
    <h4>Carro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
           <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.dataFabricacao)
        </dt>
        <dd class="col-sm-10">
            @Model.dataFabricacao.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendido)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Voltar</a>
    </form>
</div>